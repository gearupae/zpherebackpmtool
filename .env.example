# Backend environment configuration for production
# Copy to backend/.env and update values. Do NOT commit real secrets.

# App
APP_NAME=Zphere
VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# JWT
SECRET_KEY=change-me-to-a-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database (master DB for super admin and shared metadata)
# Async URL used by the app
DATABASE_URL=postgresql+asyncpg://zphere_user:change_me@db.example.com:5432/zphere_master
# Individual fields (used for tenant DB management when parsing DATABASE_URL is not possible)
DATABASE_HOST=db.example.com
DATABASE_PORT=5432
DATABASE_NAME=zphere_master
DATABASE_USER=zphere_user
DATABASE_PASSWORD=change_me

# Alembic migrations (sync driver URL for CLI tools)
# If set, alembic/env.py will use this instead of alembic.ini
ALEMBIC_DB_URL=postgresql+psycopg2://zphere_user:change_me@db.example.com:5432/zphere_master

# Redis (optional)
REDIS_URL=redis://redis.example.com:6379/0

# CORS
# Comma-separated list of allowed origins
CORS_ORIGINS=https://app.yourdomain.com,https://admin.yourdomain.com

# Stripe (leave empty in code; set here in production)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# XAI / Grok (optional)
XAI_API_KEY=
XAI_BASE_URL=https://api.x.ai/v1
XAI_MODEL=grok-2-latest

# Google OAuth (optional)
GOOGLE_CLIENT_ID=

# Uploads
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=uploads/
